{
    "manifest_version": 2,

    "name": "go-ogle",
    "description": "search google and stuff",
    "version":  "0.1",

    "permissions": [
        "activeTab",
        "tabs",
        "https://www.google.com/*"
    ],

    "content_scripts": [
        {
            "matches":  ["https://www.google.com/*"],
            "css":      [],
            "js":       ["content_script.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },



    "browser_action": {
        "default_title": "go-ogle"
    }
}